    <script>
        document.getElementById('ocorrenciaForm').addEventListener('submit', function(event) {
           
            event.preventDefault();
            
            
            if (this.checkValidity()) {
                alert('REGISTRO CRIADO COM SUCESSO');
                
                setTimeout(function(){
                    
                    
                }, 1000);
            } else {
                
